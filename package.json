{
  "name": "@bitblit/ratchet",
  "version": "0.0.0",
  "description": "Common tools for general use",
  "files": [
    "dist"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "contributors": [
    "Christopher Weiss <bitblit@gmail.com>",
    "William Weiss <npm@codification.org>",
    "Austin Grantham <agrantham@algidious.com>",
    "Lucas Myers <veganbeef@protonmail.com>"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 140,
    "singleQuote": true,
    "arrowParens": "always"
  },
  "config": {},
  "scripts": {
    "prepare-to-publish": "yarn clean-compile && yarn run apply-ci-vars && yarn remove-compiled-tests",
    "copy-static-files": "shx cp -R src/static dist",
    "clean-compile": "yarn run clean && yarn run generate-barrels && yarn run compile && yarn copy-static-files",
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc-watch",
    "remove-compiled-tests": "rimraf ./lib/**/*.spec.d.ts && rimraf ./lib/**/*.spec.js && rimraf ./lib/**/*.spec.js.map",
    "clean": "shx rm -Rf lib bundles temp",
    "compile-test": "yarn compile && yarn test",
    "test": "yarn node --experimental-vm-modules node_modules/jest/bin/jest --preset=ts-jest --testEnvironment=node --transform={}",
    "apply-ci-vars": "node dist/node-only/ci/apply-ci-env-variables-to-files github dist/static/build-properties.json",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "generate-barrels": "barrelsby --delete -d src -l top -e .*\\.spec\\.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitblit/Ratchet"
  },
  "keywords": [
    "wrench",
    "utility"
  ],
  "bugs": {
    "url": "https://github.com/bitblit/Ratchet/issues"
  },
  "homepage": "https://github.com/bitblit/Ratchet#readme",
  "engines": {
    "node": ">=14.15"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "browserslist": "^4.16.5",
    "lodash": "4.17.21",
    "luxon": "2.3.0",
    "ts-enum-util": "4.0.2"
  },
  "resolutions": {
    "ansi-regex": "^5.0.1",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "minimist": "^1.2.5",
    "y18n": "^4.0.1",
    "hosted-git-info": "^2.8.9",
    "mixme": "^0.5.2",
    "tmpl": "^1.0.5",
    "glob-parent": "^5.1.2",
    "browserslist": "^4.16.5",
    "path-parse": "^1.0.7"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.92",
    "@types/jest": "27.4.0",
    "@types/luxon": "2.0.9",
    "@types/node": "14.18.1",
    "@types/yargs": "17.0.7",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "aws-sdk": "2.1063.0",
    "barrelsby": "2.3.2",
    "cross-fetch": "3.1.5",
    "cross-env": "7.0.3",
    "csv": "5.5.3",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "handlebars": "4.7.7",
    "handlebars-layouts": "3.1.4",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "js-yaml": "4.1.0",
    "json-loader": "0.5.7",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.2",
    "rimraf": "3.0.2",
    "rxjs": "7.4.0",
    "shx": "0.3.4",
    "swagger-model-validator": "3.0.21",
    "tmp": "0.2.1",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "tsc-watch": "4.6.0",
    "typescript": "4.5.5",
    "walk": "2.3.15"
  }
}

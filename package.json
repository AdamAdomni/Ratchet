{
  "name": "@bitblit/ratchet",
  "version": "0.0.0",
  "description": "Common tools for general use",
  "private": true,
  "workspaces": {
    "packages": [
      "modules/*"
    ],
    "nohoist": [
      "**/json5",
      "**/json5/**",
      "**/ts-jest",
      "**/ts-jest/**",
      "**/canvas",
      "**/canvas/**"
    ]
  },
  "contributors": [
    "Christopher Weiss <bitblit@gmail.com>",
    "William Weiss <npm@codification.org>",
    "Austin Grantham <agrantham@algidious.com>",
    "Lucas Myers <veganbeef@protonmail.com>",
    "Joel Flint <joel@stimulimedia.net>",
    "Bilal Shahid <bshahid@adomni.com>"
  ],
  "scripts": {
    "clean": "wsrun clean",
    "build": "wsrun --serial build",
    "test": "wsrun test --detectOpenHandles",
    "apply-github-info": "./apply-github-info.sh",
    "publish": "wsrun publish --new-version 4.0.$GITHUB_RUN_NUMBER --no-git-tag-version --non-interactive ",
    "publish-alpha": "wsrun publish --new-version 4.0.$GITHUB_RUN_NUMBER-alpha --no-git-tag-version --non-interactive "
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitblit/Ratchet"
  },
  "keywords": [
    "ratchet",
    "wrench",
    "utility"
  ],
  "bugs": {
    "url": "https://github.com/bitblit/Ratchet/issues"
  },
  "homepage": "https://github.com/bitblit/Ratchet#readme",
  "engines": {
    "node": ">=14.18"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "cross-fetch": "3.1.5",
    "luxon": "3.3.0",
    "lodash-es": "4.17.21"
  },
  "peerDependencies": {
    "cross-fetch": "3.1.5",
    "luxon": "3.3.0"
  },
  "resolutions": {},
  "devDependencies": {
    "@types/jest": "29.5.0",
    "@types/luxon": "3.2.0",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "barrelsby": "2.5.1",
    "concurrently": "8.0.1",
    "cross-env": "7.0.3",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "prettier": "2.8.7",
    "pretty-quick": "3.1.3",
    "rimraf": "4.4.1",
    "renamer": "4.0.0",
    "shx": "0.3.4",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsc-watch": "6.0.0",
    "typedoc": "0.23.28",
    "typescript": "4.8.4",
    "wsrun": "5.2.4"
  }

{
  "name": "@bitblit/ratchet",
  "version": "0.0.0",
  "description": "Common tools for general use",
  "private": true,
  "workspaces": {
    "packages": [
      "modules/*"
    ],
    "nohoist": [
      "**/json5",
      "**/json5/**",
      "**/ts-jest",
      "**/ts-jest/**",
      "**/canvas",
      "**/canvas/**"
    ]
  },
  "contributors": [
    "Christopher Weiss <bitblit@gmail.com>",
    "William Weiss <npm@codification.org>",
    "Austin Grantham <agrantham@algidious.com>",
    "Lucas Myers <veganbeef@protonmail.com>",
    "Joel Flint <joel@stimulimedia.net>",
    "Bilal Shahid <bshahid@adomni.com>"
  ],
  "scripts": {
    "clean": "wsrun clean",
    "build": "wsrun --serial build",
    "test": "wsrun test --detectOpenHandles",
    "apply-github-info": "./apply-github-info.sh",
    "set-codependencies": "./set-codependencies.sh 4.0.$GITHUB_RUN_NUMBER",
    "set-codependencies-alpha": "./set-codependencies.sh 4.0.$GITHUB_RUN_NUMBER-alpha",
    "publish": "wsrun publish --new-version 4.0.$GITHUB_RUN_NUMBER --no-git-tag-version --non-interactive ",
    "publish-alpha": "wsrun publish --new-version 4.0.$GITHUB_RUN_NUMBER-alpha --no-git-tag-version --non-interactive "
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitblit/Ratchet"
  },
  "keywords": [
    "ratchet",
    "wrench",
    "utility"
  ],
  "bugs": {
    "url": "https://github.com/bitblit/Ratchet/issues"
  },
  "homepage": "https://github.com/bitblit/Ratchet#readme",
  "engines": {
    "node": ">=14.18"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "cross-fetch": "4.0.0",
    "luxon": "3.3.0"
  },
  "peerDependencies": {
    "cross-fetch": "^4.0.0",
    "luxon": "3.3.0"
  },
  "resolutions": {
    "semver": "^7.5.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "25.0.2",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.1.0",
    "@rollup/plugin-terser": "0.4.3",
    "@rollup/plugin-typescript": "11.1.2",
    "@types/jest": "29.5.2",
    "@types/luxon": "3.3.0",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "barrelsby": "2.8.0",
    "concurrently": "8.2.0",
    "cross-env": "7.0.3",
    "esbuild": "0.18.11",
    "esbuild-plugin-glob": "2.2.2",
    "esbuild-plugin-polyfill-node": "0.3.0",
    "eslint": "8.44.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.6.1",
    "jest-when": "3.5.2",
    "npm-dts": "1.3.12",
    "prettier": "3.0.0",
    "pretty-quick": "3.1.3",
    "renamer": "4.0.0",
    "rimraf": "5.0.1",
    "rollup": "3.26.2",
    "rollup-plugin-natives": "0.7.6",
    "rollup-plugin-polyfill-node": "0.12.0",
    "shx": "0.3.4",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsc-watch": "6.0.4",
    "typedoc": "0.24.8",
    "typescript": "5.1.6",
    "wsrun": "5.2.4"
  }
}
